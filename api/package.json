{
  "name": "stoagroup-db-api",
  "version": "1.0.0",
  "description": "REST API for Stoa Group Database",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "watch": "tsc --watch",
    "db:query": "npx ts-node --transpile-only scripts/db-manipulate.ts query",
    "db:exec": "npx ts-node --transpile-only scripts/db-manipulate.ts exec",
    "db:sp": "npx ts-node --transpile-only scripts/db-manipulate.ts sp",
    "db:test": "npx ts-node --transpile-only scripts/test-connection.ts",
    "db:sync-all": "npx ts-node --transpile-only scripts/sync-all-data.ts",
    "db:sync-loans": "npx ts-node --transpile-only scripts/sync-loans-data.ts",
    "db:import-csv": "npx ts-node --transpile-only scripts/import-all-csv-data.ts",
    "db:validate-csv": "npx ts-node --transpile-only scripts/validate-csv-data.ts",
    "db:add-missing-projects": "npx ts-node --transpile-only scripts/add-missing-projects.ts",
    "db:fix-schema": "npx ts-node --transpile-only scripts/fix-schema.ts",
    "db:fix-all": "npm run db:fix-schema && npm run db:add-missing-projects",
    "db:review-flat-exports": "npx ts-node --transpile-only scripts/review-flat-exports.ts",
    "db:import-flat-exports": "npx ts-node --transpile-only scripts/import-flat-exports.ts",
    "db:import-ims": "npx ts-node --transpile-only scripts/import-ims-data.ts",
    "db:seed": "npx ts-node --transpile-only scripts/seed-database.ts",
    "db:test-api": "npx ts-node --transpile-only scripts/test-api.ts",
    "db:test-data": "npx ts-node --transpile-only scripts/test-data-import.ts",
    "db:rescaffold": "npx ts-node --transpile-only scripts/rescaffold-db.ts",
    "db:safe-rescaffold": "npx ts-node --transpile-only scripts/safe-rescaffold-db.ts",
    "db:verify-deal-ids": "npx ts-node --transpile-only scripts/verify-deal-ids.ts",
    "db:verify-all-deal-ids": "npx ts-node --transpile-only scripts/verify-all-deal-ids.ts",
    "db:update-stages": "npx ts-node --transpile-only scripts/update-project-stages.ts",
    "db:update-banks": "npx ts-node --transpile-only scripts/update-bank-profiles.ts",
    "db:update-participations": "npx ts-node --transpile-only scripts/update-participations.ts",
    "db:import-contingent-liabilities": "npx ts-node --transpile-only scripts/import-contingent-liabilities-data.ts",
    "db:import-targeted-banks": "npx ts-node --transpile-only scripts/import-targeted-banks-data.ts",
    "db:update-banking-dashboard": "npx ts-node --transpile-only scripts/update-banking-dashboard-data.ts",
    "db:add-birth-order-to-project": "npx ts-node --transpile-only scripts/add-birth-order-to-project.ts",
    "db:seed-auth-users": "npx ts-node --transpile-only scripts/seed-auth-users.ts",
    "db:seed-participation-financing-type": "npx ts-node --transpile-only scripts/seed-participation-financing-type.ts",
    "db:run-migration": "npx ts-node --transpile-only scripts/run-migration.ts",
    "db:remove-duplicate-parent-holdings": "npx ts-node --transpile-only scripts/remove-duplicate-parent-holdings.ts",
    "db:import-asana-deal-pipeline": "npx ts-node --transpile-only scripts/import-asana-deal-pipeline.ts",
    "db:import-asana-precon-managers": "npx ts-node --transpile-only scripts/import-asana-precon-managers.ts",
    "db:create-admin-user": "npx ts-node --transpile-only scripts/create-admin-user.ts"
  },
  "keywords": ["api", "rest", "azure-sql"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mssql": "^10.0.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/mssql": "^8.1.0",
    "@types/cors": "^2.8.17",
    "@types/xlsx": "^0.0.36",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.2",
    "xlsx": "^0.18.5"
  }
}

